<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TalentHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?t=@DateTime.Now" asp-append-version="true" />
    <link rel="stylesheet" href="~/TalentHub.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container bg-white">
    <header class="py-4 px-3">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo@400x100-bold-dark.png" alt="Logo da Aplicação" width="130">
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark-blue fw-bold" asp-area="" asp-controller="Projetos" asp-action="Index">Projetos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark-blue fw-bold" asp-area="" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 px-4">
            @RenderBody()
        </main>
    </div>

    <footer class="footer row bg-dark-gray text-white pt-4">
        <div class="justify-content-between">
            <div class="col ms-4">
                <img src="~/images/logo@400x100-bold-light.png" alt="Logotipo TalentHub" width="210">
                <p class="my-2 ms-1">Descubra. Conecte. Cresça.</p>
            </div>

            <div class="col d-flex justify-content-end gap-3 me-4">
                <img src="~/images/puc@550x450-light.png" alt="PUC Minas" height="70">
                <img src="~/images/azure@100x100-light.png" alt="Microsoft Azure" height="70">
                <img src="~/images/github@100x100-light.png" alt="GitHub" height="70">
            </div>
        </div>

        <div class="d-flex mt-5 py-3 bg-darker-gray justify-content-between align-items-center">
            <div class="col ms-4">
                <img src="~/images/cs@50x50-light.png" alt="C#" width="40" class="opacity-25">
                <img src="~/images/html5@50x50-light.png" alt="HTML5" width="40" class="opacity-25">
                <img src="~/images/js@50x50-light.png" alt="JavaScript" width="40" class="opacity-25">
                <img src="~/images/css3@50x50-light.png" alt="CSS3" width="40" class="opacity-25">
            </div>
            <div class="col me-4 text-end">
                &copy; 2024 TalentHub
            </div>
        </div>
    </footer>



    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
