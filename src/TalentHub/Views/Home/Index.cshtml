@{
    ViewData["Title"] = "Página inicial";
}

<div class="home-content">
    <div class="top-bar d-flex align-items-center">
        <div class="w-100 text-center fs-1 fw-bold text-white mb-5">367 projetos cadastrados</div>
    </div>

    <div class="search-container">
        <div class="search-card py-4 px-4">
            <div class="input-group d-flex align-items-center">
                <div class="input-group-prepend">
                    <span>
                        <img src="~/images/magnifier@100x100.png" alt="Buscar" height="50" />
                    </span>
                </div>
                <input type="text" class="form-control input-group-text" placeholder="Busque por um projeto"
                    aria-label="Busque por um projeto" aria-describedby="basic-addon1">
                <div class="input-group-append">
                    <button class="search-btn d-flex justify-content-between align-items-center" type="button">
                        <img src="~/images/paper-plane@100x100.png" alt="Buscar" height="34" class="me-3" /> <div class="text-center fs-5 me-5">Buscar</div>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="container home-container mt-5">
    <div class="row">
        <div class="col-md-2">
            <h5 class="mb-4 fw-bold text-dark-blue">Refine sua busca</h5>
            <div class="mb-3 list">
                <h6 class="fw-bold text-dark-blue mb-3">Categorias</h6>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        Saúde
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        Tecnologia
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        Finanças
                    </label>
                </div>
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label">
                        Projetos sociais
                    </label>
                </div>
                <a class="text-decoration-none" href="">+ mostrar mais</a>
            </div>
            
            <div class="mb-3 pt-3">
                <h6 class="fw-bold text-dark-blue mb-3">Palavras-chaves</h6>
                <input type="text" name="palavras-chaves" id="palavras-chaves" placeholder="Ex: Consultas, Carros" class="form-control border-primary p-2">
            </div>

            <div class="mb-3 pt-3">
                <div class="row">
                    <h6 class="fw-bold text-dark-blue mb-3">Ano e período (Eixo)</h6>
                    <div class="col">
                        <select name="ano" id="ano" class="form-control form-select border-primary p-2">
                            <option value="2024">2024</option>
                            <option value="2023">2023</option>
                        </select>
                    </div>
                    <div class="col">
                        <select name="eixo" id="eixo" class="form-control form-select border-primary p-2">
                            <option value="1">1°</option>
                            <option value="2">2°</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="mb-3 pt-3">
                <h6 class="fw-bold text-dark-blue mb-3">Avaliação</h6>
                <div class="rating-filter">
                    @for(int i = 1; i <= 4; i++){
                        <label class="rating-label">
                            <input type="radio" name="rating" value="@i" class="rating-input">
                            <div class="rating-stars">
                                @for(int j = 1; j <= i; j++){
                                    <i class="fas fa-star text-warning"></i>
                                }
                                @for(int k = i; k < 5; k++){
                                    <i class="far fa-star text-secondary"></i>
                                }
                            </div>
                        </label>
                    }
                </div>
            </div>

        </div>

        <div class="col-md-10">
            <h2 class="text-center mb-4" style="color: #004085;">Melhor Avaliados</h2>
            <div class="list-group mb-5">
                <div class="list-group-item">
                    <div class="d-flex justify-content-between">
                        <div class="p-2 col-8">
                            <h5 class="mb-1">Título do Projeto</h5>
                            <p class="mb-1">Descrição breve do projeto...</p>
                        </div>
                        <div class="p-2 col-4 text-right">
                            <span class="rating-number me-2">4.5</span>
                            <div class="rating-stars d-inline-block"></div>
                        </div>
                    </div>
                </div>
            </div>
            <h2 class="text-center mb-4" style="color: #004085;">Mais Acessados</h2>
            <div class="list-group">
            </div>
        </div>
    </div>
</div>



</div>

<link rel="stylesheet" href="~/css/home.css?t=@DateTime.Now" asp-append-version="true" />